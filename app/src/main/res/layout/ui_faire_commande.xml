<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_menu_backg"
    tools:context="com.massino.pfeadelramzi.FaireCommandeActivity">

    <EditText
        android:id="@+id/quantité"
        android:layout_width="404dp"
        android:layout_height="73dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/borderimageview"
        android:hint="Quantité souhaitée"
        android:textAlignment="center"
        android:gravity="center"
        android:inputType="number"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/prixaffiché"
        tools:layout_editor_absoluteX="3dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/prixaffiché"
        android:layout_width="404dp"
        android:layout_height="73dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/borderimageview"
        android:hint="Prix"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/spinner2_nom"
        tools:layout_editor_absoluteX="3dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/passercom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/borderimageview"
        android:contentDescription="Commander"
        android:gravity="center"
        android:src="@drawable/icons8_add_shopping_cart_1002"
        android:text="Commander"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adressL"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/spinner2_nom"
        android:layout_width="404dp"
        android:layout_height="73dp"
        android:layout_marginTop="104dp"
        android:autofillHints="Selectionner un meuble"
        android:background="@drawable/borderimageview"
        android:gravity="center"
        android:spinnerMode="dropdown"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/adressL"
        android:layout_width="404dp"
        android:layout_height="73dp"
        android:layout_marginTop="20dp"
        android:hint="Adresse de livraison"
        android:background="@drawable/borderimageview"
        android:textAlignment="center"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quantité" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Commander"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passercom"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>