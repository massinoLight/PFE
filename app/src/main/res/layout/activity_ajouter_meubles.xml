<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AjouterMeubles"
    android:background="@drawable/custom_menu_backg">

    <EditText
        android:id="@+id/textView3"
        android:layout_width="404dp"
        android:layout_height="73dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/borderimageview"
        android:hint="Stock"
        android:gravity="center"
        android:inputType="number"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteX="3dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/textView2"
        android:layout_width="404dp"
        android:layout_height="73dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/borderimageview"
        android:inputType="number"
        android:hint="Prix"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/spinner_nom"
        tools:layout_editor_absoluteX="3dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/button4"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:background="@drawable/borderimageview"
        android:gravity="center"
        android:src="@drawable/icons8_checked_1002"
        android:text="Ajouter Image"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/spinner_nom"
        android:layout_width="404dp"
        android:layout_height="73dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/borderimageview"
        android:gravity="center"
        android:spinnerMode="dropdown"
        android:autofillHints="Selectionner un meuble"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Ajouter Meuble"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>